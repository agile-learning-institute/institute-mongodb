{
	"description": "A Learning Topic",
	"bsonType": "object",
	"required": ["name"],
	"properties": {
		"name": {
			"description": "The Topic Name",
			"bsonType": "string",
			"maxLength": 128
		},
		"status": {
			"description": "The status of this topic",
			"bsonType": "string",
			"enum": ["Active", "Archived"]
		},
		"overview": {
			"description": "The Topic overview paragraph",
			"bsonType": "string",
			"maxLength": 512
		},
		"partOfSeries": {
			"description": "The name of the course, curriculum, or other collection in which this topic comprises a cohesive unit of learning",
			"bsonType": "string",
			"maxLength": 128
		},
		"resources": {
			"bsonType": "array",
			"items": {
				"bsonType": "objectId"
			}
		}
	}
}
