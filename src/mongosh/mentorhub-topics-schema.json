{
	"description": "A Learning Topic",
	"bsonType": "object",
	"required": ["name"],
	"properties": {
		"name": {
			"description": "The Topic Name",
			"bsonType": "string",
			"maxLength": 128
		},
		"status": {
			"description": "The status of this topic",
			"bsonType": "string",
			"enum": ["Active", "Archived"]
		},
		"overview": {
			"description": "The Topic overview paragraph",
			"bsonType": "string",
			"maxLength": 256
		},
		"skills": {
			"description": "The list of Skills related to this topic",
			"bsonType": "array",
			"items": { "bsonType": "string" }
		},
		"partOfSeries": {
			"bsonType": "string",
			"maxLength": 128
		},
		"resources": {
			"bsonType": "array",
			"items": {
				"bsonType": "objectId"
			}
		}
	}
}
