{
	"description": "A Learning Topic",
	"bsonType": "object",
	"required": [
		"name"
	],
	"properties": {
		"_id": {
			"description": "The Topic ID",
			"bsonType": "objectId"
		},
		"name": {
			"description": "The Topic Name",
			"bsonType": "string",
			"maxLength": 128
		},
		"status": {
			"description": "The status of this topic",
			"bsonType": "string",
			"enum": [
				"Active",
				"Archived"
			]
		},
		"description": {
			"description": "The Topic overview paragraph",
			"bsonType": "string",
			"maxLength": 512
		},
		"catagory": {
			"description": "A simple catagorization of topics based on ITIL and ITSM best practices",
			"bsonType": "string",
			"enum": [
				"Foundations of ITSM",
				"Design and Development",
				"Infrastructure and Operations",
				"Networking and Security",
				"Development Tools and Practices",
				"Data Management",
				"Continuous Integration and Deployment",
				"Monitoring and Performance"
			]
		},
		"path": {
			"description": "A learning path through topics, list to grow as needed",
			"bsonType": "string",
			"enum": [
				"Odin Full Stack JS",
				"EngineerKit",
				"SRE speciality",
				"Data speciality",
				"AWS Cloud Hosting",
				"Salesforce"
			]
		},
		"skills": {
			"description": "The list of skills related to this topic",
			"bsonType": "array",
			"items": {
				"bsonType": "objectId"
			}
		},
		"resources": {
			"description": "List of resources related to this topic",
			"bsonType": "array",
			"items": {
				"bsonType": "objectId"
			}
		},
		"lastSaved": {
			"description": "The location where this person lives",
			"bsonType": "object",
			"properties": {
				"fromIp": {
					"description": "Http Request remote IP address",
					"bsonType": "string"
				},
				"byUser": {
					"description": "UUID Of User",
					"bsonType": "string"
				},
				"atTime": {
					"description": "The date-time when last updated",
					"bsonType": "string"
				},
				"correlationId": {
					"description": "The logging correlation ID of the update transaction",
					"bsonType": "string"
				}
			}
		}
	}
}