{
	"description": "A Learning resource",
	"bsonType": "object",
	"required": [
		"name"
	],
	"properties": {
		"_id": {
			"description": "The unique identifier for a resource",
			"bsonType": "objectId"
		},
		"name": {
			"description": "The Resource Shrot Name (slug)",
			"bsonType": "string",
			"maxLength": 32
		},
		"status": {
			"description": "The status of this resource",
			"bsonType": "string",
			"enum": [
				"Active",
				"Archived"
			]
		},
		"description": {
			"description": "The Resource description",
			"bsonType": "string",
			"maxLength": 256
		},
		"duration": {
			"description": "The estimated time in minutes to consume this resource",
			"bsonType": "int",
			"minimum": 1,
			"maximum": 2880
		},
		"link": {
			"description": "Link to Resource, must be https",
			"bsonType": "string",
			"maxLength": 256,
			"pattern": "^(https)://[^\\s/$.?#].[^\\s]*$"
		},
		"skills": {
			"description": "The list of skills this resource contributes to",
			"bsonType": "array",
			"items": {
				"bsonType": "objectId"
			}
		},
		"tags": {
			"description": "Tags to assist with classification of this resource",
			"bsonType": "array",
			"items": {
				"bsonType": "string",
				"enum": [
					"$",
					"Article",
					"Book",
					"Exam",
					"Interactive",
					"Lecture",
					"Lesson",
					"Reference",
					"Tutorial",
					"User Guide",
					"Video"
				]
			}
		},
		"rating": {
			"description": "The rating given by members to this resource",
			"bsonType": "object",
			"properties": {
				"count": {
					"description": "Number of Reviews",
					"bsonType": "int",
					"minimum": 1,
					"maximum": 16777216
				},
				"sum": {
					"description": "The sum of all ratings (1-5) Stars",
					"bsonType": "int",
					"minimum": 1,
					"maximum": 4294967296
				}
			}
		},
		"lastSaved": {
			"description": "The location where this person lives",
			"bsonType": "object",
			"properties": {
				"fromIp": {
					"description": "Http Request remote IP address",
					"bsonType": "string"
				},
				"byUser": {
					"description": "UUID Of User",
					"bsonType": "string"
				},
				"atTime": {
					"description": "The date-time when last updated",
					"bsonType": "string"
				},
				"correlationId": {
					"description": "The logging correlation ID of the update transaction",
					"bsonType": "string"
				}
			}
		}
	}
}