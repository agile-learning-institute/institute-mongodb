{
	"description": "A Learning Topic",
	"bsonType": "object",
	"required": [
		"_id",
		"name"
	],
	"properties": {
		"_id": {
			"description": "The Topic ID",
			"bsonType": "objectId"
		},
        "version": {
            "description": "Scehma Version (only on Version document",
            "bsonType": "string",
            "maxLength": 20
        },
		"name": {
			"description": "The Topic Name",
			"bsonType": "string",
			"maxLength": 128
		},
		"status": {
			"description": "The status of this topic",
			"bsonType": "string"
		},
		"description": {
			"description": "The Topic overview paragraph",
			"bsonType": "string",
			"maxLength": 512
		},
		"category": {
			"description": "A simple categorization of topics based on ITIL and ITSM best practices",
			"bsonType": "string"
		},
		"path": {
			"description": "A learning path through topics, list to grow as needed",
			"bsonType": "string"
		},
		"segment": {
			"description": "The segment within the Path",
			"bsonType": "string"
		},
		"sequence": {
			"description": "The sequence within the Segment",
			"bsonType": "int"
		},
		"skills": {
			"description": "The list of skills related to this topic",
			"bsonType": "array",
			"items": {
				"bsonType": "objectId"
			}
		},
		"resources": {
			"description": "List of resources related to this topic",
			"bsonType": "array",
			"items": {
				"bsonType": "objectId"
			}
		}
	},
	"additionalProperties": false
}