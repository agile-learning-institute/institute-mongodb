{
  "bsonType": "object",
  "required": [
    "name"
  ],
  "properties": {
    "_id": {
      "description": "The unique identifier for a partner",
      "bsonType": "objectId"
    },
    "name": {
      "description": "VERSION is the key that identifies a document as a Schema Version document, otherwise it's just the name",
      "bsonType": "string",
      "maxLength": 32
    },
    "description": {
      "description": "Description of the partner",
      "bsonType": "string",
      "maxLength": 256
    },
    "version": {
      "description": "The Schema Version number (only on VERSION document)",
      "bsonType": "string",
      "maxLength": 20
    },
    "status": {
      "description": "The status of this partnership",
      "bsonType": "string",
      "enum": [
        "Active",
        "Inactive",
        "Archived"
      ]
    },
    "url": {
      "description": "Partner Company website",
      "bsonType": "string",
      "maxLength": 256,
      "pattern": "^(https?|ftp)://[^\\s/$.?#].[^\\s]*$"
    },
    "contacts": {
      "description": "Array of contacts associated with this partner",
      "bsonType": "array",
      "items": {
        "bsonType": "objectId",
        "properties": {
          "_id": {
            "description": "The unique identifier for a contact",
            "bsonType": "objectId"
          },
          "name": {
            "description": "The name of the contact",
            "bsonType": "string",
            "maxLength": 32
          },
          "eMail": {
            "description": "The email address of the contact",
            "bsonType": "string",
            "pattern": "^\\S+@\\S+\\.\\S+$"
          }
        }
      }
    },
    "lastSaved": {
      "description": "The location where this person lives",
      "bsonType": "object",
      "properties": {
        "fromIp": {
          "description": "Http Request remote IP address",
          "bsonType": "string"
        },
        "byUser": {
          "description": "UUID Of User",
          "bsonType": "string"
        },
        "atTime": {
          "description": "The date-time when last updated",
          "bsonType": "string"
        },
        "correlationId": {
          "description": "The logging correlation ID of the update transaction",
          "bsonType": "string"
        }
      }
    }
  }
  
}

