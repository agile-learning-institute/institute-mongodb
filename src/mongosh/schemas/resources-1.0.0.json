{
	"description": "A Learning resource",
	"bsonType": "object",
	"required": [
		"name"
	],
	"properties": {
		"_id": {
			"description": "The unique identifier for a resource",
			"bsonType": "objectId"
		},
		"name": {
			"description": "The Resource Shrot Name (slug)",
			"bsonType": "string",
			"maxLength": 128
		},
		"status": {
			"description": "The status of this resource",
			"bsonType": "string",
			"enum": ["Active", "Archived"]
		},
		"description": {
			"description": "The Resource description",
			"bsonType": "string",
			"maxLength": 256
		},
		"duration": {
			"description": "The estimated time in minutes to consume this resource",
			"bsonType": "int",
			"minimum": 1,
			"maximum": 2880
		},
		"link": {
			"description": "Link to Resource",
			"bsonType": "string",
			"maxLength": 256,
			"pattern": "^(https|ftp)://[^\\s/$.?#].[^\\s]*$"
		},
		"skills": {
			"description": "The list of skills this resource contributes to",
			"bsonType": "array",
			"items": {
				"bsonType": "objectId"
			}
		},
		"tags": {
			"description": "Tags to assist with classification of this resource",
			"bsonType": "array",
			"items": {
				"bsonType": "string",
				"enum": [
					"$",
					"Article",
					"Book",
					"Exam",
					"Interactive",
					"Lecture",
					"Lesson",
					"Reference",
					"Tutorial",
					"User Guide",
					"Video"
				]
			}
		}
	}
}